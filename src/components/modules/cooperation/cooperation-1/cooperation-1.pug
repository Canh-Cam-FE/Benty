			.banner-btn(class="flex items-center gap-5 mt-base")
				a(href="#" class="button-primary button-primary-white")
					span Đăng ký làm đại lý
					i.fa-regular.fa-chevron-right
				a(href="#" class="button-primary button-primary-white")
					span Đặt đồng phục
					i.fa-regular.fa-chevron-right
